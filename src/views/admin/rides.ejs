<%- include('../partials/header') %>

<div class="container-fluid py-4">
  <div class="row">
    <div class="col-12">
      <div class="card mb-4">
        <div class="card-header pb-0 d-flex justify-content-between align-items-center">
          <h6>Ride Management</h6>
          <div>
            <a href="/admin" class="btn btn-sm btn-secondary">
              <i class="fas fa-arrow-left me-1"></i> Back to Dashboard
            </a>
            <a href="/admin/reports" class="btn btn-sm btn-primary">
              <i class="fas fa-chart-bar me-1"></i> View Reports
            </a>
          </div>
        </div>
        <div class="card-body px-0 pt-0 pb-2">
          <div class="table-responsive p-0">
            <table class="table align-items-center mb-0">
              <thead>
                <tr>
                  <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Ride Details</th>
                  <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Passenger</th>
                  <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Driver</th>
                  <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Status</th>
                  <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Fare</th>
                </tr>
              </thead>
              <tbody>
                <% if (rides && rides.length > 0) { %>
                  <% rides.forEach(ride => { %>
                    <tr>
                      <td>
                        <div class="d-flex px-3 py-1">
                          <div class="d-flex flex-column justify-content-center">
                            <h6 class="mb-0 text-sm"><%= ride.date %> at <%= ride.time %></h6>
                            <p class="text-xs text-secondary mb-0">From: <%= ride.pickup %></p>
                            <p class="text-xs text-secondary mb-0">To: <%= ride.destination %></p>
                          </div>
                        </div>
                      </td>
                      <td>
                        <p class="text-xs font-weight-bold mb-0"><%= ride.passenger %></p>
                      </td>
                      <td>
                        <p class="text-xs font-weight-bold mb-0"><%= ride.driver %></p>
                      </td>
                      <td>
                        <span class="badge bg-<%= getStatusBadgeColor(ride.status) %>">
                          <%= ride.status %>
                        </span>
                      </td>
                      <td>
                        <p class="text-xs font-weight-bold mb-0"><%= ride.fare %></p>
                      </td>
                    </tr>
                  <% }); %>
                <% } else { %>
                  <tr>
                    <td colspan="5" class="text-center">No rides found</td>
                  </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  function getStatusBadgeColor(status) {
    switch(status.toLowerCase()) {
      case 'completed':
        return 'success';
      case 'in progress':
      case 'started':
        return 'info';
      case 'pending':
        return 'warning';
      case 'cancelled':
        return 'danger';
      case 'payment_pending':
        return 'primary';
      default:
        return 'secondary';
    }
  }
</script>

<%- include('../partials/footer') %> 