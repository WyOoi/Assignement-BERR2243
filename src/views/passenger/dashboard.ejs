  .destination-card {
    transition: var(--transition);
    border: none;
    box-shadow: var(--shadow-sm);
    overflow: hidden;
  }
  
  .destination-card:hover {
    transform: translateY(-5px);
    box-shadow: var(--shadow-md);
  }
  
  .destination-card .card-img-top {
    height: 140px;
    object-fit: cover;
  }
  
  /* Avatar */
  .avatar-circle {
    width: 30px;
    height: 30px;
    background-color: var(--primary);
    border-radius: 50%;
    display: inline-flex;
    align-items: center;
    justify-content: center;
  }
  
  .avatar-initials {
    color: white;
    font-weight: 600;
    font-size: 14px;
  }
  
  /* Horizontal scrolling */
  .destinations-slider {
    position: relative;
  }
  
  .destinations-slider .row {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }
  
  .destinations-slider .row::-webkit-scrollbar {
