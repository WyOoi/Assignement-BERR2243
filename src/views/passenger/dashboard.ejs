<div class="row mb-4">
  <div class="col-md-12">
    <div class="card shadow-sm">
      <div class="card-body">
        <div class="d-flex justify-content-between align-items-center">
          <h1 class="h3 mb-0">Welcome, <%= user.name %></h1>
          <a href="/passenger/request" class="btn btn-primary">
            <i class="fas fa-plus-circle me-2"></i> Request a Ride
          </a>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row mb-4">
  <div class="col-md-4">
    <div class="card shadow-sm h-100">
      <div class="card-body">
        <h5 class="card-title">Quick Actions</h5>
        <div class="list-group list-group-flush">
          <a href="/passenger/request" class="list-group-item list-group-item-action">
            <i class="fas fa-car me-2"></i> Request a Ride
          </a>
          <a href="/passenger/rides" class="list-group-item list-group-item-action">
            <i class="fas fa-history me-2"></i> View Ride History
          </a>
          <a href="/passenger/profile" class="list-group-item list-group-item-action">
            <i class="fas fa-user-edit me-2"></i> Edit Profile
          </a>
        </div>
      </div>
    </div>
  </div>
  
  <div class="col-md-8">
    <div class="card shadow-sm h-100">
      <div class="card-header bg-white">
        <h5 class="card-title mb-0">Recent Rides</h5>
      </div>
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
                <th>Date</th>
                <th>From</th>
                <th>To</th>
                <th>Driver</th>
                <th>Status</th>
                <th>Fare</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td>2025-06-24</td>
                <td>UTeM Main Campus</td>
                <td>MITC Mall</td>
                <td>John Doe</td>
                <td><span class="badge bg-success">Completed</span></td>
                <td>RM 15.00</td>
              </tr>
              <tr>
                <td>2025-06-22</td>
                <td>UTeM Hostel</td>
                <td>Melaka Sentral</td>
                <td>Jane Smith</td>
                <td><span class="badge bg-success">Completed</span></td>
                <td>RM 25.00</td>
              </tr>
              <tr>
                <td colspan="6" class="text-center">
                  <a href="/passenger/rides" class="text-decoration-none">View all rides</a>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <div class="card shadow-sm">
      <div class="card-header bg-white">
        <h5 class="card-title mb-0">Popular Destinations</h5>
      </div>
      <div class="card-body">
        <div class="row">
          <div class="col-md-4 mb-3">
            <div class="card h-100">
              <img src="https://placehold.co/600x200/007bff/white?text=Melaka+Sentral" class="card-img-top" alt="Melaka Sentral">
              <div class="card-body">
                <h5 class="card-title">Melaka Sentral</h5>
                <p class="card-text">Main transportation hub in Melaka.</p>
                <a href="/passenger/request?destination=Melaka Sentral" class="btn btn-sm btn-outline-primary">Request Ride</a>
              </div>
            </div>
          </div>
          <div class="col-md-4 mb-3">
            <div class="card h-100">
              <img src="https://placehold.co/600x200/007bff/white?text=AEON+Mall" class="card-img-top" alt="AEON Mall">
              <div class="card-body">
                <h5 class="card-title">AEON Mall</h5>
                <p class="card-text">Popular shopping destination.</p>
                <a href="/passenger/request?destination=AEON Mall" class="btn btn-sm btn-outline-primary">Request Ride</a>
              </div>
            </div>
          </div>
          <div class="col-md-4 mb-3">
            <div class="card h-100">
              <img src="https://placehold.co/600x200/007bff/white?text=Dataran+Pahlawan" class="card-img-top" alt="Dataran Pahlawan">
              <div class="card-body">
                <h5 class="card-title">Dataran Pahlawan</h5>
                <p class="card-text">Shopping mall in the heart of Melaka.</p>
                <a href="/passenger/request?destination=Dataran Pahlawan" class="btn btn-sm btn-outline-primary">Request Ride</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div> 