<div class="row justify-content-center">
  <div class="col-md-6 col-lg-5">
    <div class="card shadow">
      <div class="card-body p-5">
        <div class="text-center mb-4">
          <h2 class="fw-bold"><i class="fas fa-taxi me-2"></i> MyTaxi</h2>
          <p class="text-muted">Log in to your account</p>
        </div>
        
        <% if (error) { %>
          <div class="alert alert-danger">
            <%= error %>
          </div>
        <% } %>
        
        <form action="/auth/login" method="POST">
          <div class="mb-3">
            <label for="email" class="form-label">Email address</label>
            <div class="input-group">
              <span class="input-group-text"><i class="fas fa-envelope"></i></span>
              <input type="email" class="form-control" id="email" name="email" placeholder="name@utem.edu.my" required>
            </div>
            <small class="form-text text-muted">Use your UTeM email address</small>
          </div>
          
          <div class="mb-4">
            <label for="password" class="form-label">Password</label>
            <div class="input-group">
              <span class="input-group-text"><i class="fas fa-lock"></i></span>
              <input type="password" class="form-control" id="password" name="password" required>
            </div>
          </div>
          
          <div class="d-grid">
            <button type="submit" class="btn btn-primary btn-lg">Login</button>
          </div>
        </form>
        
        <div class="mt-4 text-center">
          <p>Don't have an account? <a href="/auth/register">Register here</a></p>
        </div>
        
        <hr class="my-4">
        
        <div class="text-center">
          <p class="text-muted small">For testing purposes:</p>
          <p class="small mb-1"><strong>Passenger:</strong> passenger@utem.edu.my</p>
          <p class="small mb-1"><strong>Driver:</strong> driver@utem.edu.my</p>
          <p class="small"><strong>Admin:</strong> admin@utem.edu.my</p>
          <p class="small text-muted">Use any password</p>
        </div>
      </div>
    </div>
  </div>
</div> 